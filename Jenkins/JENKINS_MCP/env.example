# Jenkins Configuration
JENKINS_URL=http://localhost:8080
JENKINS_USERNAME=admin
JENKINS_TOKEN=your_jenkins_api_token_here

# Jenkins Agent Configuration (if using distributed builds)
JENKINS_AGENT_SECRET=your_agent_secret_here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/jenkins_mcp

# Security Configuration
# API_KEY=your_api_key_here
# ENCRYPTION_KEY=your_encryption_key_here

# Monitoring Configuration
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Email Configuration (for notifications)
# SMTP_HOST=smtp.company.com
# SMTP_PORT=587
# SMTP_USERNAME=jenkins-mcp@company.com
# SMTP_PASSWORD=your_smtp_password_here

# Custom Configuration
# JENKINS_MCP_CONFIG_FILE=/app/config/custom.yaml