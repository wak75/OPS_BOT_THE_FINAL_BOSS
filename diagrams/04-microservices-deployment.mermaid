    SONAR_QUALITY --> DOCKER_TWO
    
    DOCKER_ONE --> POD1_1
    DOCKER_ONE --> POD1_2
    DOCKER_TWO --> POD2_1
    DOCKER_TWO --> POD2_2
    
    POD1_1 --> SVC1
    POD1_2 --> SVC1
    POD2_1 --> SVC2
    POD2_2 --> SVC2
    
    SVC1 --> INGRESS
    SVC2 --> INGRESS
    
    POD1_1 & POD1_2 & POD2_1 & POD2_2 --> HEALTH
    POD1_1 & POD1_2 & POD2_1 & POD2_2 --> LOGS
    POD1_1 & POD1_2 & POD2_1 & POD2_2 --> METRICS
    
